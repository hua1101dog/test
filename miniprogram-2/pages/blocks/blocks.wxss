.tip{
  font-size: 18rpx;
  position: absolute;
  right: 0;
  top: 0;
  height: 26rpx;
  line-height: 26rpx;
  z-index: 99;
}

.now .tip{
  color: #2F3107;
}

.past .tip{
  color: #E5E5E4;
}

/* 上箭头 */
.now:after,
.past:after{
  position: absolute;
  display: block;
  content: "";
  border-width: 40rpx 40rpx 40rpx 40rpx;
  border-style: solid;
  right: -40rpx;
  top: -40rpx;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  -o-transform: rotate(45deg);
}
.past:after {
  border-color: transparent transparent #788CC6 transparent;
}
.now:after{
  border-color: transparent transparent #E7EE30 transparent;
}
